@model RegistrationModel
@{
    ViewData["Title"] = "Customer Registration";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <form id="registerForm" asp-controller="Register" asp-action="Customer" method="post">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <partial name="_RegistrationFormPartial" model="@Model" />
        </form>
        <p class="mt-3">
            Already registered as a Customer?<br/>
            <a asp-controller="Login" asp-action="Customer">Login</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
