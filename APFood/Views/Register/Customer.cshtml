@model CustomerRegistrationModel
@{
    ViewData["Title"] = "Customer Registration";
}

<div class="row">
    <div class="col-lg-6 mx-auto">
        <form id="registerForm" asp-controller="Register" asp-action="Customer" method="post">
            <h1>@ViewData["Title"]</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" aria-required="true" placeholder="Full Name" />
                <label asp-for="FullName">Full Name</label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <partial name="_RegistrationFormPartial" model="@Model" />
        </form>
        <p class="mt-3">
            Already registered as a Customer?<br/>
            <a asp-controller="Login" asp-action="Customer">Login</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
