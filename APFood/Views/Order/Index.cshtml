@using APFood.Constants.Order
@model APFood.Models.Order.OrderViewModel
@{
    ViewData["Title"] = "Order";
    string IsActive(OrderStatus status) => Model.CurrentStatus == status ? "active" : "";
}

<div class="container my-5">
    <div class="row mb-4">
        <h1 class="text-start fs-2">Order</h1>
    </div>
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs" id="orderTabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link @(IsActive(OrderStatus.Pending))" href="/Order?status=@(OrderStatus.Pending)">
                        Pending <span class="badge bg-primary">@Model.OrderCounts[OrderStatus.Pending]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive(OrderStatus.Processing))" href="/Order?status=@(OrderStatus.Processing)">
                        Processing <span class="badge bg-primary">@Model.OrderCounts[OrderStatus.Processing]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive(OrderStatus.Ready))" href="/Order?status=@(OrderStatus.Ready)">
                        Ready <span class="badge bg-primary">@Model.OrderCounts[OrderStatus.Ready]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive(OrderStatus.Completed))" href="/Order?status=@(OrderStatus.Completed)">
                        Completed <span class="badge bg-primary">@Model.OrderCounts[OrderStatus.Completed]</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(IsActive(OrderStatus.Cancelled))" href="/Order?status=@(OrderStatus.Cancelled)">
                        Cancelled <span class="badge bg-primary">@Model.OrderCounts[OrderStatus.Cancelled]</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <div class="tab-content" id="orderTabsContent">
                @if (Model.OrderList.Count == 0)
                {
                    <div class="tab-pane fade show active" id="emptyState" role="tabpanel">
                        <p class="text-muted">No @Model.CurrentStatus orders found.</p>
                    </div>
                }
                else
                {
                    <div class="tab-pane fade show active" id="processing" role="tabpanel" aria-labelledby="processing-tab">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Order Time</th>
                                    <th>Queue Number</th>
                                    <th>Dining Option</th>
                                    <th>Total Price</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.OrderList)
                                {
                                    <tr>
                                        <td>@order.OrderId</td>
                                        <td>@order.OrderTime.ToString("g")</td>
                                        <td>@order.QueueNumber</td>
                                        <td>@order.DineInOption</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary" href="/Order/@order.OrderId">View</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
