@model IEnumerable<APFood.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<h1>Order History</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Total Amount</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer.UserName</td>
                <td>@order.TotalAmount</td>
                <td>@order.Status</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-action="OrderDetails" asp-route-id="@order.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
