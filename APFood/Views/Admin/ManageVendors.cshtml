@model IEnumerable<APFoodUser>

@{
    ViewData["Title"] = "Manage Vendors";
}

<h1>Manage Vendors</h1>

<form asp-action="CreateVendor" method="post">
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
    </div>
    <button type="submit" class="btn btn-primary">Create Vendor</button>
</form>

<table class="table mt-4">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vendor in Model)
        {
            <tr>
                <td>@vendor.UserName</td>
                <td>@vendor.Email</td>
                <td>@vendor.Status</td>
                <td>
                    <form asp-action="UpdateVendorStatus" method="post" class="d-inline">
                        <input type="hidden" name="vendorId" value="@vendor.Id" />
                        <select name="status">
                            <option value="Active">Active</option>
                            <option value="Inactive">Inactive</option>
                        </select>
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                    </form>
                    <form asp-action="DeleteVendor" method="post" class="d-inline">
                        <input type="hidden" name="vendorId" value="@vendor.Id" />
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
