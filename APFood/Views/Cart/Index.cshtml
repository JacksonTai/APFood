@{
    ViewData["Title"] = "Cart";
}

@model List<APFood.Data.CartItem>

<section class="h-100 h-custom">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12">
                <div class="card-registration card-registration-2">
                    <div class="card-body p-0">
                        <div class="row g-0">
                            @if (Model.Any()) {
                            <div class="col-lg-8 p-5">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h1 class="fw-bold text-black">Cart</h1>
                                    <h6 id="total-items">@Model.Count item</h6>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Item</t>
                                                <th scope="col">Unit Price</th>
                                                <th scope="col">Quantity</th>
                                                <th scope="col">Price</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="align-middle">
                                                        <div class="col-3 d-flex align-items-center">
                                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img5.webp"
                                                                 class="img-fluid rounded-3" alt="Cotton T-shirt" style="max-width: 3.5rem">
                                                            <h6 class="ms-3">@item.Food.Name</h6>
                                                        </div>
                                                    </td>
                                                    <td class="align-middle">
                                                        <h6>RM @item.Food.Price</h6>
                                                    </td>
                                                    <td class="align-middle">
                                                        <div class="d-flex">
                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="changeQuantity(@item.Id, -1)">
                                                                <i class="fas fa-minus"></i>
                                                            </button>
                                                            <input id="quantity-@item.Id" min="1" name="quantity" value="@item.Quantity" type="number"
                                                                   style="width: 3rem" class="form-control form-control-sm" />
                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="changeQuantity(@item.Id, 1)">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                    <td class="align-middle">
                                                        <h6 id="item-price-@item.Id">RM @(item.Food.Price * item.Quantity)</h6>
                                                    </td>
                                                    <td class="align-middle">
                                                        <a class="text-muted" role="button" onclick="removeItem(@item.Id)">
                                                            <i class="fas fa-trash-can"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                            <div class="col-lg-4 bg-grey">
                                <div class="p-5 pt-0 pt-lg-5">
                                    <h3 class="fw-bold mb-5 mt-2 pt-1">Order Summary</h3>
                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4 text-secondary">
                                        <h5>Subtotal</h5>
                                        <h5 id="subtotal">@Model.Sum(item => item.Food.Price * item.Quantity).ToString("C")</h5>
                                    </div>

                                    <hr class="my-4">

                                    <h5 class="mb-3">Dine-in Option</h5>

                                    <div class="mb-4 pb-2">
                                        <select class="form-select" aria-label="Default select example">
                                            <option selected disabled>Select</option>
                                            <option value="1">Delivery</option>
                                            <option value="2">Pick-up</option>
                                        </select>
                                    </div>

                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="runner-point">
                                        <label class="form-check-label" for="flexSwitchCheckDefault">Redeem 1 Runner Point</label>
                                    </div>

                                    <hr class="my-4">

                                    <div class="d-flex justify-content-between mb-4">
                                        <h5>Total</h5>
                                        <h5 id="total-price">@Model.Sum(item => item.Food.Price * item.Quantity).ToString("C")</h5>
                                    </div>

                                    <button type="button" data-mdb-button-init data-mdb-ripple-init
                                            class="btn btn-dark btn-block btn-lg w-100"
                                            data-mdb-ripple-color="dark">
                                        Proceed to checkout
                                    </button>

                                </div>
                            </div>
                            } else {
                              <div class="text-center mt-5">
                                    <h3 class="fw-bold">Your cart is empty</h3>
                                    <a href="#" class="mt-2 d-inline-block btn btn-dark btn-lg">Browse Food</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/cart.js"></script>
}