@model APFood.Data.Food

@{
    ViewData["Title"] = "Delete Food";
}

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Food" asp-action="Index">Food List</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Food</li>
        </ol>
    </nav>
    <div class="card p-4 border">
        <h2 class="mb-4">Delete Food</h2>
        <h3>Are you sure you want to delete this food item?</h3>
        <div class="mb-3">
            <h4>@Model.Name</h4>
            <p>@Model.Description</p>
            <p><strong>Rm @Model.Price</strong></p>
            <p><img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px;" /></p>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
